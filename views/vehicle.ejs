<%- include('./_layouts/header.ejs') %>

<div class="row">
    
    <h1 class="page-header"><%= p.title %></h1>
    
    <div class="col-xs-12 col-md-5">
        <img class="spi" src="<%= p.image %>" alt="">
        <br>
    </div>
    <div class="col-xs-12 col-md-7">
        <p><%= p.desc %></p>
        <% if(user) { %>
            <p><a href="/book/add/details/<%= p.slug %>">Book</a></p>
        <% } else { %>
            <p>You must be logged in to book this vehicle</p>
        <% } %>
    </div>
</div>

<%- include('./_layouts/footer.ejs') %>