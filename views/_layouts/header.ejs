<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
   


    <title><%= title %></title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" >
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <link rel="stylesheet" href="css/style.css">


  </head>
  <body>


    <nav class="navbar navbar-inverse">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">TMS</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <li><a href="/book/checkout">My Bookings</a></li>
            <% if (user) { %>
              <li><a href='/users/logout'>Hi, <%= user.username %> (Logout)</a></li>
            <% } else { %>
            <li><a href="/users/register">Register</a></li>
            <li><a href="/users/login">Log in</a></li>
            <% } %>
            <% if(user && user.admin) { %>
              <li><a href='/admin/vehicles'>Admin area</a></li>
            <% } %>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>

    <div class="container">

      <% if(errors) { %>
        <% errors.forEach(error=>{ %>
          <div class="alert alert-danger">
            <%= error.msg %>
          </div>
        <% }); %>
      <% } %>

      <div class="row">
        <div class="col-xs-12 col-md-3">
            <h3>Categories</h3>
            <ul class="list-group">
                <li class="list-group-item"><a href="/vehicles">All vehicles</a></li>
                <% categories.forEach(function(c){ %>
                    <li class="list-group-item"><a href="/vehicles/<%= c.slug %>"><%= c.title %></a></li>
                <% }); %>
            </ul>
        </div>
        <div class="col-xs-12 col-md-1"></div>
        <div class="col-xs-12 col-md-8">
