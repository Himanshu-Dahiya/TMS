<%- include('../_layouts/adminheader') %>

<h2 class="driver-title">Drivers</h2>
<a href="/admin/drivers/add-driver" class="btn btn-primary">Add a new driver</a>
<br><br>

<table class="table table-striped">

    <thead>
        <tr class="home">
            <th>Name</th>
            <th>Mobile No</th>
            <th>Address</th>
            <th>License No</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        <% drivers.forEach((driver)=>{ %>
            <tr>
                <td><%= driver.name %></td>
                <td><%= driver.mobileNo %></td>
                <td><%= driver.address %></td>
                <td><%= driver.licenseNo %></td>
                <td><a href="/admin/drivers/edit-driver/<%= driver._id %>">Edit</a></td>
                <% if (driver.slug == "home") { %>
                <td></td>
                <% }  else {%>
                <td><a href="/admin/drivers/delete-driver/<%= driver._id %>">Delete</a></td>
                <% }%>
            </tr>
            <% }); %>
    </tbody>
</table>

<%- include('../_layouts/adminfooter') %>